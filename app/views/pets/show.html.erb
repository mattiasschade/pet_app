<h1><%= @pet.name %></h1>
<h3><%= @pet.breed %></h3>
<h3><%= @pet.user && @pet.user.name %></h3>

<img src="<%= @pet.image_url %>" />


<ul>
  <li><%= link_to "Edit", edit_pet_path(@pet) %></li>
  <li><%= link_to "Destroy", pet_path(@pet), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
            } %></li>
</ul>

